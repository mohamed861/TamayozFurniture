@model ReviewDto
<div class="tab-pane fade show active" id="review" role="tabpanel" aria-labelledby="review-tab">
    <div class="row">
        <div class="col-lg-6">
            <div class="row total_rate">
                <div class="col-6">
                    <div class="box_total">
                        <h5>متوسط التقييمات</h5>
                        <h4>@Model.AvaregRate</h4>
                        <h6>(التقييمات @Model.TotalRates)</h6>
                    </div>
                </div>
                <div class="col-6">
                    <div class="rating_list">
                        <!--<h3>Based on 3 Reviews</h3>-->
                        <ul class="list">
                            <li>
                                <a>
                                    @await Html.PartialAsync("rate", Model.AvaregRate)
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="review_list">

                @foreach (var review in Model.UserComments)
                {
                    <div class="review_item">
                        <div class="media">
                            <div class="d-flex">
                                <img src="~/img/product/single-product/review-1.png" alt="" />
                            </div>
                            <div class="media-body">
                                <h4>@review.UserFullName</h4>
                                @await Html.PartialAsync("rate", review.Rating)
                            </div>
                            <p>
                                @review.CommentText
                            </p>
                        </div>

                    </div>

                }
            </div>
        </div>
        <div class="col-lg-6">
            <div class="review_box">
                @await Html.PartialAsync("comment_form", new UserCommentsDto())
            </div>
        </div>
    </div>
</div>
